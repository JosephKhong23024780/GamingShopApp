<!-- item.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Gaming Shop App</title>
</head>
<body>
  <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <br>
        <div class="text-center"><h2>Item Details</h2></div>
        <br>
        <% if (item) { %> <!-- Check if item data exists -->
            <div>
                <p><b>Item Name:</b><br> <%= item.name %></p>
                <p><b>Item Description:</b></p> <%= item.i_description %>
                <p><b>Item Image:</b><br> <img src = "/images/<%= item.image %>" width="20%"></p>
                <form action="/addCart/<%= item.itemId %>" method="POST">
                    <div class="mb-3">
                        <label for="quantity" class="form-label">Quantity</label>
                        <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                </form>
                <p><b>Price:</b><br> $<%= item.price.toFixed(2) %></p> 
            </div>
        <% } else { %>
            <p>No item found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
