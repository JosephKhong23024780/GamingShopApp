<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Gaming Shop App</title>
</head>
<body>
  <%- include ('partials/navbar.ejs') %>
  <% if (login[0].login_status === 1) { %>
    <div class="container">
        <br>
        <div class="text-center"><h2>Edit Cart Item</h2></div>
        <br>
        <div class="d-flex justify-content-center">
          <div class="card" style="width: 50%;">
            <form action="/updateCart/<%= item.cartId %>" method="POST">
              <div class="card-body">
                <h4 class="card-title mt-3"><%= item.name %></h4>
                <p class="card-text">Quantity: <input type="number" name="quantity" value="<%= item.quantity %>" min="1" class="form-control"></p>
                <p class="card-text">Price: $<%= item.price.toFixed(2) %></p>
                <button type="submit" class="btn btn-primary">Update Quantity</button>
              </div>
            </form>
          </div>
        </div>
        <br>
        <div class="text-center">
          <a href="/cart" class="btn btn-primary">Back to Cart</a>
        </div>
    </div>
    <% } else { %> 
        <div class="container">
            <br>
            <div class="text-center"><h2>Access Denied</h2></div>
            <br>
            <div class="text-center">
                <h3>You must be logged in to edit an item in the cart.</h3>
                <a href="/login">Login</a>
            </div>
        </div>
    <% } %>
</body>
</html>