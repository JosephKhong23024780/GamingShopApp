<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Gaming Shop App</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container my-5">
        <h1 class="text-center mb-4">Need Support?</h1>
        <div class="card bg-info text-dark mb-4" style="border: 5px solid black;">
            <div class="card-body text-center">
                <h2>Contact Us at +65 1234 9876</h2>
                <h3 class="mt-3">OR</h3>
                <h4>Provide your details below:</h4>
            </div>
        </div>
        <div class="card p-4" style="border: 5px solid black;">
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="contactNumber" class="form-label">Contact Number:</label>
                <input type="tel" class="form-control" id="contactNumber" name="contactNumber" required>
            </div>
            <a href="/thanks" class="btn btn-primary">Submit</a>
        </div>
    </div>
</body>
</html>