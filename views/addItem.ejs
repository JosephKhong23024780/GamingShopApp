<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>Gaming Shopping App</title>
    </head>
<body>
  <%- include ('partials/navbar.ejs') %>
  <% if (login[0].login_status === 1) { %>
    <div class="container">
        <br>
        <div class="text-center"><h2>Add New Item</h2></div>
        <br>
        <div class="text-right">
            <form action="/addItem" method="POST" enctype="multipart/form-data">
                <label for="name">Item Name:</label><br>
                <input class="form-control" type="text" id="name" name="name" required><br><br>

                <label for="i_description">Item Description:</label><br>
                <textarea class="form-control" type="text" id="i_description" name="i_description" required></textarea><br><br>

                <label for="quantity">Quantity:</label><br>
                <input class="form-control" type="number" id="quantity" name="quantity" min="0" step="1"required><br><br>

                <label for="price">Price:</label><br>
                <input class="form-control" type="number" id="price" name="price" min="0" step="0.01" required><br><br>

                <label for="image">Image:</label><br>
                <input type="file" id="image" name="image" accept="image/" required><br><br>

                <button type="submit">Add Item</button>
            </form>
        </div>
    </div>
    <% } else { %> 
        <div class="container">
            <br>
            <div class="text-center"><h2>Access Denied</h2></div>
            <br>
            <div class="text-center">
                <h3>You must be logged in to add an item.</h3>
                <a href="/login">Login</a>
            </div>
        </div>
    <% } %>
</body>
</html>
