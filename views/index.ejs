<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Gaming Shop App</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>

  <div class="container">
    <br>
    <div class="text-center"><h2>Gaming Items from Gaming Shop App Database</h2></div>
    <br>

    <!-- Carousel -->
  <div id="demo" class="carousel slide" data-bs-ride="carousel">

    <!-- Indicators/dots -->
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
      <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
      <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
    </div>

    <!-- The slideshow/carousel -->
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="images/MSI_logo.png" alt="MSI" class="d-block w-100" style="width:300px; height:500px;">
      </div>
      <div class="carousel-item">
        <img src="images/Razor_logo.png" alt="Razor" class="d-block w-100" style="width:300px; height:500px;">
      </div>
      <div class="carousel-item">
        <img src="images/ASUS_logo.png" alt="ASUS" class="d-block w-100" style="width:300px; height:500px;">
      </div>
    </div>

    <!-- Left and right controls/icons -->
    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
      <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
      <span class="carousel-control-next-icon"></span>
    </button>
  </div>
  <h1>Browsing Gaming Items</h1>
  <% if (typeof query !== 'undefined') { %>
    <h3>Search results for "<%= searchItem %>":</h3>
  <% } %>
  <div style="width:100%; overflow: auto;">
    <% for(let i=0; i < items.length; i++) { %>
      <div class="card" style="width: 33%; float: left;">
        <div class="card-body" style="display: inline;">
          <img class="card-img-top" src = "images/<%= items[i].image %>" width="20%" height="500px">
          <h4><%= items[i].name %></h4>
          <p>Quantity: <%= items[i].quantity %></p>
          <p>Price: $<%= items[i].price.toFixed(2) %></p>
          <% if (login[0].login_status === 1) { %>
            <a href="/editItem/<%= items[i].itemId %>" class="btn btn-primary">Edit</a>
            <a href="/deleteItem/<%= items[i].itemId %>" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
          <% } %>
          <a href="/item/<%= items[i].itemId %>" class="btn btn-primary">See Details</a>
        </div>
      </div>
    <% } %>
  </div>
</body>
<footer>
  <div style="bottom: 5px">
    <p>*For more description, click on the "See Details" button.</p>
    <p>Â© 2024 Gaming Shop App</p>
  </div>
</footer>
</html>

