<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Gaming Shop App</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <% if (login[0].login_status === 1 && login[0].login_status === 1) { %>
        <div class="container">
            <br>
            <div class="text-center"><h2>Make Payment</h2></div>
            <br>
            <div class="text-right">
                <form action="/payment" method="POST" enctype="multipart/form-data">
                    <label for="cardnum">Card Number:</label><br>
                    <input class="form-control" type="number" id="cardnum" name="cardnum" min="0" step="1" required><br><br>
    
                    <label for="securitynum">Security Number:</label><br>
                    <input class="form-control" type="number" id="securitynum" name="securitynum" min="0" step="1" required><br><br>
    
                    <label for="name">Name:</label><br>
                    <input class="form-control" type="text" id="name" name="name"required><br><br>
    
                    <label for="phonenum">Phone Number:</label><br>
                    <input class="form-control" type="number" id="phonenum" name="phonenum" min="0" step="1" required><br><br>
    
                    <button type="submit">Proceed</button>
                </form>
            </div>
        </div>
        <% } else { %> 
            <div class="container">
                <br>
                <div class="text-center"><h2>Access Denied</h2></div>
                <br>
                <div class="text-center">
                    <h3>You must be logged in to make payment.</h3>
                    <a href="/login">Login</a>
                </div>
            </div>
        <% } %>